{
  "compilerOptions": {
    "target": "ESNext",
    "module":  "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts", "src/tests"],
  "types": [ "node" ],
  "exclude": ["node_modules"]
  
}